<div class="col-md-12">
    {{#if chat.length}}
        {{#each chat}}
            <p class="m-0">
                <span style="color: brown;">[{{formatDate dateTime }}]</span>
                <b class="text-primary fw-bold">{{author.name}}</b>:
                <i style="color: green;">{{message}}</i>
                <img src="/uploads/{{author.avatar}}" alt="" style="width: 20px;">
            </p>
        {{/each}}
    {{else}}
    <div class="alert alert-warning" role="alert">
        Chat vac√≠o
    </div>
    {{/if}}
</div>